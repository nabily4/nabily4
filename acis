            Logout
        </button>

    </div>

    <script>
        let isMusicPlaying = false;
        // Dapatkan referensi tombol musik dengan ID yang lebih spesifik
        const musicToggleButton = document.getElementById('musicToggleButton');
        const bgm = document.getElementById('bgm');

        function showDashboard() {
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
            // Pastikan teks tombol musik benar saat dashboard dimuat
            if (isMusicPlaying) {
                 musicToggleButton.textContent = 'Matikan Musik';
                 musicToggleButton.classList.remove('bg-green-500', 'hover:bg-green-600');
                 musicToggleButton.classList.add('bg-red-500', 'hover:bg-red-600');
            } else {
                 musicToggleButton.textContent = 'Putar Musik';
                 musicToggleButton.classList.remove('bg-red-500', 'hover:bg-red-600');
                 musicToggleButton.classList.add('bg-green-500', 'hover:bg-green-600');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            if (localStorage.getItem('loggedInCinta') === 'true') {
                showDashboard();
                // Jika status musik sebelumnya 'playing', coba setel variabel isMusicPlaying ke true
                // Tapi jangan panggil play() langsung di sini, biarkan user yang klik
                if (localStorage.getItem('musicStatus') === 'playing') {
                    isMusicPlaying = true; // Set variabel, tapi tidak langsung play
                    // Teks tombol akan diatur oleh showDashboard()
                } else {
                    isMusicPlaying = false;
                }
            } else {
                document.getElementById('username').focus();
            }
        });

        function login() {
            const usernameInput = document.getElementById('username');
            const passwordInput = document.getElementById('password');
            const errorMsg = document.getElementById('errorMsg');
            const loginButton = document.getElementById('loginButton');

            const user = usernameInput.value.trim().toLowerCase();
            const pass = passwordInput.value;

            loginButton.disabled = true;
            loginButton.textContent = 'Memuat...';

            setTimeout(() => {
                if ((user === 'aciss' || user === 'sayang') && pass === 'aciss') {
                    localStorage.setItem('loggedInCinta', 'true');
                    showDashboard();
                    errorMsg.classList.add('hidden');
                    errorMsg.classList.remove('error-shake');
                } else {
                    errorMsg.classList.remove('hidden');
                    errorMsg.classList.remove('error-shake');
                    void errorMsg.offsetWidth;
                    errorMsg.classList.add('error-shake');
                    passwordInput.value = '';
                    usernameInput.focus();
                }
                loginButton.disabled = false;
                loginButton.textContent = 'Masuk';
            }, 500);
        }
        
        function toggleMusic() {
            if (isMusicPlaying) {
                bgm.pause();
                musicToggleButton.textContent = 'Putar Musik';
                musicToggleButton.classList.remove('bg-red-500', 'hover:bg-red-600');
                musicToggleButton.classList.add('bg-green-500', 'hover:bg-green-600');
                localStorage.setItem('musicStatus', 'paused');
            } else {
                // Panggil play() langsung pada elemen audio
                bgm.play().then(() => {
                    musicToggleButton.textContent = 'Matikan Musik';
                    musicToggleButton.classList.remove('bg-green-500', 'hover:bg-green-600');
                    musicToggleButton.classList.add('bg-red-500', 'hover:bg-red-600');
                    localStorage.setItem('musicStatus', 'playing');
                }).catch(e => {
                    console.error("Gagal memutar musik:", e);
                    alert("Browser memblokir pemutaran musik otomatis. Anda mungkin perlu mengubah pengaturan media browser Anda atau mengklik tombol Putar Musik secara manual.");
                    localStorage.setItem('musicStatus', 'paused');
                    // Reset tombol jika gagal
                    musicToggleButton.textContent = 'Putar Musik';
                    musicToggleButton.classList.remove('bg-red-500', 'hover:bg-red-600');
                    musicToggleButton.classList.add('bg-green-500', 'hover:bg-green-600');
                });
            }
            isMusicPlaying = !isMusicPlaying;
        }

        function logout() {
            localStorage.removeItem('loggedInCinta');
            localStorage.removeItem('musicStatus');
            document.getElementById('dashboard').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
            document.getElementById('username').focus();
            document.getElementById('errorMsg').classList.add('hidden');
            
            bgm.pause();
            bgm.currentTime = 0;
            isMusicPlaying = false;
            musicToggleButton.textContent = 'Putar Musik';
            musicToggleButton.classList.remove('bg-red-500', 'hover:bg-red-600');
            musicToggleButton.classList.add('bg-green-500', 'hover:bg-green-600');
        }
    </script>

</body>
</html>
